doctype html
html(lang='en')
head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Super sprinter 3000
    link(rel='stylesheet', href='css/style.css')
body
    main
        h1(class='main-header') Super Sprinter 3000
        section(class='user_stories')
            h2(class='visually-hidden') User stories
            button(id='add-story-btn') Add user story
            table(class='user_stories__table')
                tr
                    th(class='user_stories__id') Id
                    th(class='user_stories__title') Title
                    th(class='user_stories__story') Story
                    th(class='user_stories__acceptance') Acceptance criteria
                    th(class='user_stories__business-value') Business value
                    th(class='user_stories__estimation') Estimation
                    th(class='user_stories__status') Status
                
                include ./tableRow.pug
        section(class='add-story-popup popup')
            h2(class='popup__header') Add User Story
            form(class='popup__form')
                label(for='new-title') Story Title:
                input(id='new-title' name='title' type='text' minlength='5' required)
                label(for='new-user-story') User Story:
                textarea(id='new-user-story' name='user_story' type='text' required)
                label(for='new-acceptance-criteria') Acceptance Criteria:
                textarea(id='new-acceptance-criteria' name='acceptance_criteria' type='text' required)
                label(for='new-business-value') Business value:
                input(id='new-business-value' name='business_value' type='number' min='100' max='1500') 
                label(for='new-estimation') Estimation:
                input(id='new-estimation' name='estimation' type='number' min='0.5' max='40')
                div(class='popup__btn-wrapper')
                    button(class='popup__btn add-popup__btn--cancel' type='submit') Cancel
                    button(class='popup__btn add-popup__btn--submit' type='submit') Add new User Story
    script(src='js/index.js')